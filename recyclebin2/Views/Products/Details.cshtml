@model recyclebin2.Models.Product


@{
    ViewBag.Title = "Details";
    var similarProducts = ViewBag.SimilarProducts;
}

<h2>Details</h2>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ProductPrice)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductPrice)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ProductDiscription)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductDiscription)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ProductImage)
        </dt>

        <dd>
            @*@Html.DisplayFor(model => model.ProductImage)*@
            <img src="@Url.Content(Model.ProductImage)" width="250" height="250" multiple />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ProductBrand)

        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductBrand)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ProductCondition)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductCondition)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Catagory.CatagoryName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Catagory.CatagoryName)
        </dd>

    </dl>
</div>
<h2>Similar Product</h2>
<div class="row" style="margin-bottom:40px">
    @if (Model != null)
    {
        foreach (var item in similarProducts)
        {
            <div class="col-lg-4 col-md-4" style="height:200px;margin-top:100px">
                <img src="@Url.Content(item.ProductImage)" style=" height:100%;width:100% ;border-radius:50px 50px 50px 50px" />
                <h4 style="color:blue; font-family:'Arial Rounded MT';text-align:center">@item.ProductName</h4>
                <h4 style="color:blue; font-family:'Arial Rounded MT';text-align:center">@item.ProductPrice</h4>
                <div style="margin-left:160px">
                    @Html.ActionLink("Details", "Details", new { id = item.ProductID }, new { @class = "btn btn-danger btn-sm" })

                </div>
            </div>

        }
    }
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ProductID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
